<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
		<record model="ir.ui.view" id="view_vendor_receipt_form_ecua">
            <field name="name">view.vendor.receipt.form.ecua</field>
            <field name="model">account.voucher</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
					<field name="check_manage" invisible="0"/>
            	</xpath>
            	<xpath expr="//page[@string='Payment Information']" position="after">
	                <page string="Check Information" attrs="{'invisible':[('check_manage','&lt;&gt;',True)]}">
	                    <group>
                            <field name="bank_account_partner_id" domain="[('partner_id', '=', partner_id)]" 
                            attrs="{'required':[('check_manage', '=', True)]}"/>
		                    <field name="check_number" attrs="{'required':[('check_manage', '=', True), ('state', '!=', 'posted')],
		                                                       'readonly':[('state', '=', 'posted')]}"
                                   />
		                    <field name="deposit_date" attrs="{'required':[('check_manage', '=', True)]}"/>
	                    </group>
	                    <group></group>
					</page>
                </xpath>
            </field>
        </record>
	</data>
</openerp>