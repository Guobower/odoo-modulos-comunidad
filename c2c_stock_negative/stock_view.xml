      <field name="name">c2c.product.category.negative.form</field>
      <field name="model">product.category</field>
      <field name="inherit_id" ref="stock.view_category_property_form"/>
      <field name="arch" type="xml">
      <!-- Este campo se busco para que el checkbox quede en la posicion requerida -->
        <xpath expr="//field[@name='property_stock_journal']" position="after">
          	<field name="allow_negative_stock"/>
        </xpath>
      </field>
    </record>

